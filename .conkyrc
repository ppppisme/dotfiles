alignment top_left
background yes
border_width 1
border_inner_margin 300
cpu_avg_samples 2
default_color black
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
double_buffer yes
use_xft yes
xftfont Droid Sans:size=11
# gap_x 533
gap_y 300
minimum_size 1366 768
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
own_window_argb_visual yes
own_window_transparent yes
stippled_borders 0
update_interval 0.3
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

TEXT
${font Lobster 1.4:size=64}${alignc}${time %H}:${time %M}:${time %S}
${voffset -70}${font Sawasdee:size=11}${alignc}— ${time %A}, ${time %B} ${time %e}, ${time %Y} —
