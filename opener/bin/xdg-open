#!/bin/bash

[[ "$1" =~ ^https?://www.youtube.com ]] && {
  nohup "mpv" "$1" --volume 50 &>/dev/null &
  exit 0
}

[[ "$1" =~ ^https?:// ]] && {
  nohup "qutebrowser" "$1" &>/dev/null &
  exit 0
}

[[ "$1" =~ .pdf$ ]] && {
  nohup "zathura" "$1" &>/dev/null &
  exit 0
}

[[ "$1" =~ .(ogg|flac|mp3)$ ]] && {
  mpv "$1" --volume 50 --gapless-audio
  exit 0
}

[[ "$1" =~ .(mp4|webm|mkv)$ ]] && {
  nohup "mpv" "$1" --volume 50 &>/dev/null &
  exit 0
}

[[ "$1" =~ .(xlsx|xls|doc|docx|ppt|pptx)$ ]] && {
  nohup "libreoffice" "$1" &>/dev/null &
  exit 0
}

[[ "$1" =~ .(png|jpeg|jpg)$ ]] && {
  nohup "sxiv" "$1" &>/dev/null &
  exit 0
}

echo "No application found for this filetype"
exit 1
